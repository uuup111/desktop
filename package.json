{
  "name": "hypergraph-desktop",
  "productName": "Hypergraph",
  "author": "Liberate Science GmbH",
  "version": "0.2.0",
  "description": "Hypergraph Desktop app",
  "license": "MIT",
  "repository": "hypergraph-xyz/desktop",
  "scripts": {
    "build": "webpack -p",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "release": "np --no-publish --no-yarn",
    "start": "webpack-dev-server",
    "start:main": "electron .",
    "test": "prettier-standard && standard && tap --no-cov",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@hypergraph-xyz/wikidata-identifiers": "^1.1.1",
    "@n8tb1t/use-scroll-position": "^1.0.43",
    "@p2pcommons/sdk-js": "^0.5.6",
    "adm-zip": "^0.4.14",
    "dat-encoding": "^5.0.1",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-store": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "polished": "^3.4.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-spring": "^8.0.27",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@svgr/webpack": "^5.2.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "electron-builder-notarize": "^1.1.2",
    "file-loader": "^5.1.0",
    "np": "^5.2.1",
    "prettier-standard": "^16.2.1",
    "spectron": "^9.0.0",
    "standard": "^14.3.3",
    "tap": "^14.9.2",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-node-externals": "^1.7.2"
  },
  "build": {
    "files": [
      "**/*",
      "build/**/*"
    ],
    "linux": {
      "target": "AppImage"
    },
    "dmg": {
      "window": {
        "width": "416",
        "height": "200"
      },
      "iconSize": "64",
      "contents": [
        {
          "x": 100,
          "y": 100,
          "type": "file",
          "name": ""
        },
        {
          "x": 320,
          "y": 100,
          "type": "link",
          "path": "/Applications",
          "name": ""
        }
      ]
    },
    "afterSign": "electron-builder-notarize",
    "mac": {
      "hardenedRuntime": true
    }
  }
}
